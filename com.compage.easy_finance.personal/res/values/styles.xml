<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleYellow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>    
        <item name="android:padding">10dp</item> 
        <item name="android:textSize">@dimen/Venticinco</item>
        <item name="android:textColor">@color/font_color_yellow</item>
        <item name="android:textStyle">bold</item>       
    </style>
    
     <style name="TitleYellowMini">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">center</item>        
        <item name="android:gravity">left</item>    
        <item name="android:padding">10dp</item> 
        <item name="android:textSize">@dimen/Dieciocho</item>
        <item name="android:textColor">@color/font_color_yellow</item>
        <item name="android:textStyle">bold</item>       
    </style>
    
     <style name="amount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">right</item>        
        <item name="android:gravity">right</item>    
        <item name="android:padding">10dp</item> 
        <item name="android:textSize">@dimen/Dieciocho</item>
        <item name="android:textColor">@color/font_color_orange</item>
        <item name="android:textStyle">bold</item>       
    </style>
    
      <style name="income">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">right</item>        
        <item name="android:gravity">right</item>    
        <item name="android:padding">10dp</item> 
        <item name="android:textSize">@dimen/Dieciocho</item>
        <item name="android:textColor">@color/font_color_green</item>
        <item name="android:textStyle">bold</item>       
    </style>

	<style name="GridViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">100</item>
        <item name="android:columnWidth">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:numColumns">3</item>
        <item name="android:stretchMode">columnWidth</item>  
        <item name="android:verticalSpacing">10dp</item>  
             
    </style>
    
	 <style name="spinner_style" parent ="@android:attr/textViewStyle">
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:textAppearance">@style/MyText</item>
	
	 </style>
	
	 <style name="MyText" parent="@android:style/TextAppearance">
	    <item name="android:textColor">#00ffff</item>
	 </style>
    
</resources>