<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.compagerd.easy_finance.personal"
    android:versionCode="9"
    android:versionName="1.6" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="17" />
    
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

   

    <application android:icon="@drawable/logo" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar" android:allowBackup="true">
        <activity
            android:name=".activities.Dashboard"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 
        <activity android:name=".activities.Dashboard" android:theme="@android:style/Theme.NoTitleBar" ></activity>
         -->
        <activity android:name=".activities.Accounts" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.CreateAccount" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.Categories" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.CreateCategory" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.EditAccount" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.Transactions" android:theme="@android:style/Theme.NoTitleBar" ></activity>
		<activity android:name=".activities.History" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.Budgets" android:theme="@android:style/Theme.NoTitleBar" ></activity>
        <activity android:name=".activities.CreateBudget" android:theme="@android:style/Theme.NoTitleBar" ></activity>
         
        <!-- ADMOB ACTIVITY -->
        <activity android:name="com.google.ads.AdActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        
    </application>

</manifest>